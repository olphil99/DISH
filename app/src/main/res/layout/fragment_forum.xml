<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forum.ForumFragment"
    android:paddingBottom="50dp"
    android:overScrollMode="never"
    android:background="#3C0DEAD4">

    <LinearLayout
        android:id="@+id/forumMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Subscribed Forums"
            android:textSize="32sp"
            android:fontFamily = "@font/amatic_sc"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#ebdbfd"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/subscribed_forums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="All Forums"
            android:textSize="32sp"
            android:fontFamily = "@font/amatic_sc"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#ebdbfd"
            android:textColor="@color/black"/>
    </LinearLayout>

</ScrollView>