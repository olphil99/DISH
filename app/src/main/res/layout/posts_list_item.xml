<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cvPost"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="7dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/postImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of the post"
            android:layout_toRightOf="@+id/postImage"/>

        <TextView
            android:id="@+id/tvExpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expire: "
            android:layout_toRightOf="@+id/postImage"
            android:layout_below="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx/xx/xx"
            android:layout_toRightOf="@+id/tvExpire"
            android:layout_below="@+id/tvTitle"/>
        <TextView
            android:id="@+id/tvTextGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExpire"
            android:layout_toRightOf="@+id/postImage"
            android:text="Goal: "/>
        <TextView
            android:id="@+id/tvGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExpire"
            android:layout_toRightOf="@+id/tvTextGoal"
            android:text="1000"/>
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:progress="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postImage"
            app:trackThickness="10dp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>